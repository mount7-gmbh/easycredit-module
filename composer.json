{
  "name": "mount7/easycredit-module",
  "description": "The payment module by EasyCredit.",
  "type": "oxideshop-module",
  "keywords": [
    "oxid",
    "modules",
    "eShop"
  ],
  "homepage": "https://github.com/mount7-gmbh/easycredit-module",
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "Mario Lorenz",
      "homepage": "https://www.oxid-esales.com/",
      "role": "Developer"
    },
    {
      "name": "Chris Smith",
      "homepage": "https://www.mount7.com",
      "role": "Developer"
    }
  ],
  "extra": {
    "oxideshop": {
      "target-directory": "mount7/easycredit"
    }
  },
  "require": {
    "php": ">= 7.4",
    "oxid-esales/oxideshop-ce": "v6.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "phpstan/phpstan": "^2.1",
    "oxid-esales/oxideshop-ide-helper": "^6.2",
    "friendsofphp/php-cs-fixer": "^3.68"
  },
  "autoload": {
    "psr-4": {
      "Mount7\\EasyCredit\\": "../../../source/modules/mount7/easycredit"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mount7\\EasyCredit\\Application\\": "./Application",
      "Mount7\\EasyCredit\\Core\\": "./Core"
    }
  },
  "config": {
    "lock": false,
    "allow-plugins": {
      "oxid-esales/oxideshop-unified-namespace-generator": true,
      "oxid-esales/oxideshop-composer-plugin": true
    }
  },
  "scripts": {
    "test": [
      "@php ide-helper.php",
      "@php ./vendor/bin/phpunit",
      "@php ./vendor/bin/phpstan --no-progress"
    ],
    "style": [
      "@php ./vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php"
    ]
  }
}
